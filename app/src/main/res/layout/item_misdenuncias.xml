<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:padding="10dp"
    android:background="@drawable/selector_card_animation"
    >

    <TextView
        android:id="@+id/item_denuncia_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_item"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:text="Activo"
        android:layout_marginBottom="12dp"

        />
    <ImageView
        android:id="@+id/estado"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/estadoa"
        />

    <TextView
        android:id="@+id/item_denuncia_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:fontFamily="@font/varela"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_toRightOf="@id/item_denuncia_circle"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/item_denuncia_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:fontFamily="@font/dosis"
        android:textColor="#000000"
        android:layout_below="@id/item_denuncia_title"
        android:layout_toRightOf="@id/item_denuncia_circle"
        android:textSize="12dp"
        android:layout_marginLeft="20dp"
        />


</RelativeLayout>