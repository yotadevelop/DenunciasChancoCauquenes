<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/fondo"
    tools:context=".LoginActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Denuncias Chanco-Cauquenes"
        android:fontFamily="@font/ranchers"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/portafolio"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:fontFamily="@font/dosis"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola!, Gusto en verte"
        android:fontFamily="@font/dosis"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/login_txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo"
        android:drawableRight="@drawable/email"
        android:fontFamily="@font/dosis"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/login_txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:drawableRight="@drawable/key"
        android:fontFamily="@font/dosis"
        android:inputType="textPassword"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:background="@drawable/btn_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:onClick="iniciarSesion"
        android:fontFamily="@font/varela"
        android:textSize="20dp"
        android:textColor="#fff"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use una red social"
        android:fontFamily="@font/dosis"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="55dp"

            android:layout_gravity="center"
            />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="¿No tienes una Cuenta?"
        android:fontFamily="@font/dosis"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="¡Registrate!"
        android:fontFamily="@font/dosis"
        android:onClick="launchRegister"
        android:gravity="center"
        />
</LinearLayout>